{{> header}}
            {{> aboutsidebar}}
            <div class="col-md-9 mt-5">
                 {{> profilepix}}
                <form class="mt-5">
                    <div class="form-group row">
                        <label for="inputName3" class="col-sm-2 col-form-label">Full Name</label>
                        <div class="col-sm-7">
                        <input type="text" class="form-control" id="input_profile_fullname">
                        </div>
                    </div>
                    <div class="form-group row">
                        <label for="inputUserName3" class="col-sm-2 col-form-label">User Name</label>
                        <div class="col-sm-7">
                        <input type="text" class="form-control" id="input_profile_username">
                        </div>
                    </div>
                     <div class="form-group row">
                        <label for="inputEmail3" class="col-sm-2 col-form-label">Email</label>
                        <div class="col-sm-7">
                        <input type="email" class="form-control" id="input_profile_email">
                        </div>
                    </div>                    
                    <div class="form-group row">
                        <label for="inputGender3" class="col-sm-2 col-form-label">Gender</label>
                        <div class="col-sm-7">
                            <select class="form-control form-control-lg" id="input_profile_gender">
                                <option>Male</option>
                                <option>Female</option>
                                <option>Others</option>
                            </select>
                        </div>
                    </div>
                     <div class="form-group row">
                        <label for="inputStatus3" class="col-sm-2 col-form-label">Status</label>
                        <div class="col-sm-7">
                            <select class="form-control form-control-lg" id="input_profile_status">
                                <option>coach</option>
                                <option>player</option>
                                <option>fan</option>
                            </select>
                        </div>
                    </div>
                    <div class="form-group row">
                        <div class="col-sm-9">
                        <button class="btn btn-primary pull-right" id="edit_profile_button">Submit</button>
                        </div>
                    </div>
                    </form>
            </div>
        </div>
        
    </div>
</div>

